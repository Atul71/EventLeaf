# Database Configuration
# PostgreSQL connection settings

# Database host (use 'localhost' for local development, 'postgres' for Docker)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=eventleaf_db
DB_USER=eventleaf_user
DB_PASSWORD=eventleaf_password

# pgAdmin Configuration
PGADMIN_EMAIL=admin@eventleaf.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Application Configuration
NODE_ENV=development
APP_PORT=3000
APP_HOST=localhost

# JWT Configuration (optional, for backend)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=7d

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
